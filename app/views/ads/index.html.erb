<h1>Listing ads</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Price</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    <% @ads.each do |ad| %>
        <tr>
            <td><%= ad.title %></td>
            <td><%= ad.body %></td>
            <td><%= ad.price %></td>
            <td><%= link_to 'Show', ad %></td>
            <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
            <td><%= link_to 'Destroy', ad, :confirm => 'Are you sure?', :method => :delete %></td>
        </tr>
    <% end %>
</table>

<br/>

<%= link_to 'New Ad', new_ad_path, :remote => true %>
